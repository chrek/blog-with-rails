<%= form_with model: @article, local: true do |form| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
      <%= pluralize(@article.errors.count, "error") %>
      prohibited this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>  
  <% end %>

  <p>
    <div class="field is-horizontal">
      <div class="field-label is-large">
        <%= form.label :title, class: "label is-large" %>  
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control">
            <%= form.text_field :title, class: "input is-medium is-danger" %>
          </div>
          <p class="help is-danger">
            This field is required
          </p>
        </div>
      </div>
    </div>
  </p><br> 
  <p>    
    <div class="field is-horizontal">
      <div class="field-label is-large">
        <%= form.label :text, class: "label is-large" %>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control">
            <%= form.text_area :text, class: "textarea" %>
          </div>
        </div>
      </div>
    </div>    
  </p><br>
  <p>
    <div class="field is-horizontal">
      <div class="field-label">
        <!-- Left empty for spacing -->
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control">
            <%= form.submit 'Save Article', :class => 'button is-primary' %>
          </div>
        </div>
      </div>
    </div>
  </p><br>
<% end %>